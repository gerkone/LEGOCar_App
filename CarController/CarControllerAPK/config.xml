<?xml version='1.0' encoding='utf-8'?>
<widget id="it.tessaro.CarController" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>CarController</name>
    <description>
        A controller app for the lego record breaking car.
    </description>
    <author email="fabio.tessaro.porta@gmail.com" href="https://plus.google.com/u/0/101140664454077604787">
        Fabio Tessaro
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <plugin name="cordova-plugin-screen-orientation" spec="^3.0.1" />
    <plugin name="com.pylonproducts.wifiwizard" spec="~0.2.11" />
    <plugin name="cordova-plugin-android-permissions" spec="^1.0.0" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="android" spec="^7.0.0" />
</widget>
